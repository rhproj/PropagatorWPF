<Window x:Class="PropagatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropagatorWPF"
        mc:Ignorable="d"
        Title="Разослать по рабочим столам" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Распространить следующие элементы:" FontSize="20" VerticalAlignment="Center"/>
        <ListView x:Name="lvArm" Grid.Row="2" Grid.Column="1">
        </ListView>
        <Button Grid.Row="3" Grid.Column="1" Width="200" Height="60" Content="Распространить" FontSize="22"/>
    </Grid>
</Window>
